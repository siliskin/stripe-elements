{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "DOM", "ES2020", "DOM.Iterable" ],
    "moduleResolution": "node",
    "outDir": ".",
    "plugins": [ { "name": "typescript-lit-html-plugin" } ],
    "sourceMap": true,
    "target": "ES2018"
  },
  "include": [
    "src/**/*.ts",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "./d.ts"
  ]
}
